
@{
    ViewBag.Title = "Categories";
    ViewBag.BG1 = "BG1.jpg";
    ViewBag.BG2 = "BG2.jpg";

    List<BW_User.tbl_Category> AllCategories = ViewBag.Category;
}

@section Styles{
    <link href="~/Content/Category.css" rel="stylesheet" />
}


<div class="container">
    <section class="no-padding" id="portfolio">
        <div class="container-fluid">
            <div class="row no-gutter">
                @{
                    string AllCats = "";
                    foreach(tbl_Category cat in AllCategories)
                    {
            AllCats+=@"<div class='col-lg-4 col-sm-6'>
                            <a href='../Category/"+@cat.cat_ID+@"' class='portfolio-box'>
                                <img src='" + @ViewBag.PicturePath+"/"+cat.cat_SquareImage + @"' class='img-responsive' alt=''>
                                <div class='portfolio-box-caption'>
                                    <div class='portfolio-box-caption-content'>
                                        <div class='project-category text-faded'>
                                            Category
                                      </div>
                                        <div class='project-name'>
                                            " +cat.cat_Name+@" Packages
                                       </div>
                                    </div>
                                </div>
                              </a>
                         </div>";
                    }
                    @Html.Raw(AllCats);
                }
               
            </div>
        </div>
    </section>
</div>

<hr />