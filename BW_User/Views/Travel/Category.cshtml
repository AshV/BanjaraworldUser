@{
    ViewBag.Title = "Categories";

    List<BW_User.tbl_Category> AllCategories = ViewBag.Category;
    List<BW_User.tbl_Subcategory> AllSubCategories = ViewBag.Subcategory;

    ViewBag.BG1 = "BG1.jpg";
    ViewBag.BG2 = "BG2.jpg";

}

@section Styles{
    <link href="~/Content/Category.css" rel="stylesheet" />
}


<div class="container">
    <div class="well" style="color:rgb(24, 188, 156);background-color:white">
        <div class="row">
            <div class="col-sm-12" style="text-align:center">
                <font size="5%">Banjaraworld Categories</font>
            </div>
        </div>
    </div>
    <section class="no-padding" id="portfolio">
        <div class="container-fluid">
            <div class="row no-gutter">
                @{
                    string AllSubCats = "";

                    foreach (tbl_Subcategory scat in AllSubCategories)
                    {
                        if (scat.sct_CategoryFK == @ViewBag.CatID)
                        {
                            AllSubCats += @"<div class='col-lg-4 col-sm-6'>
                            <a href='../Subcategory/" + @scat.sct_ID + @"' class='portfolio-box'>
                                <img src='" + @ViewBag.PicturePath + "/" + scat.sct_SquareImage + @"' class='img-responsive' alt=''>
                                <div class='portfolio-box-caption'>
                                    <div class='portfolio-box-caption-content'>
                                        <div class='project-category text-faded'>
                                            Category
                                      </div>
                                        <div class='project-name'>
                                            " + scat.sct_Name + @" Packages
                                       </div>
                                    </div>
                                </div>
                              </a>
                         </div>";
                        }
                    }
                    @Html.Raw(AllSubCats);
                }

            </div>
        </div>
    </section>
</div>

<hr />